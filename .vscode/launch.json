{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["20"]
        },
        {
            "name": "Launch with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/CactusOS.bin",
            "cwd": "${workspaceRoot}",
            "args": [],
            /*"sourceFileMap": {
                "<source-path>": "<target-path>"
            },*/
            "targetArchitecture": "x86",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/local/bin/gdb",
            "miDebuggerArgs": "",
            "logging": {"programOutput": false},
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:1234",
                    "description": "Connect to QEMU remote debugger"
                }
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "file ${workspaceRoot}/CactusOS.bin",
                    "description": "Load binary."
                },
                {
                    "description": "Load additional app binary",
                    "ignoreFailures": true,
                    "text": "add-symbol-file ${workspaceRoot}/isofiles/apps/compositor.bin 0x800000"
                }
            ]
        },
        {
            "name": "GDB on realHW",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/CactusOS.bin",
            "cwd": "${workspaceRoot}",
            "targetArchitecture": "x86",
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceRoot}/rungdb",
            "miDebuggerArgs": "",
            "customLaunchSetupCommands": [
                {
                    "text": "target remote /dev/ttyUSB0",
                    "description": "Connect to serialport"
                }
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "file ${workspaceRoot}/CactusOS.bin",
                    "description": "Load binary."
                },
                {
                    "description": "Load additional app binary",
                    "ignoreFailures": true,
                    "text": "add-symbol-file ${workspaceRoot}/isofiles/apps/init.bin 0x800000"
                }
            ]
        }
    ]
}